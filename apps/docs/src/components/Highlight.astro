---
import clsx from 'clsx';
import { MdInfoOutline } from 'react-icons/md';
import { PiWarning } from 'react-icons/pi';
import { BiErrorAlt } from 'react-icons/bi';
import { HiOutlineCheckCircle } from 'react-icons/hi';

type HighlightType = 'info' | 'success' | 'warning' | 'critical';

export type Props = {
  variant?: HighlightType;
};

const { variant = 'info' } = Astro.props;
---

<blockquote
  class={clsx('flex px-4 py-3 my-4 items-center gap-4 rounded-md', {
    'bg-sky-700 text-white': variant === 'info',
    'bg-green-800 text-white': variant === 'success',
  })}
>
  {
    variant === 'info' ? (
      <MdInfoOutline size={24} />
    ) : variant === 'success' ? (
      <HiOutlineCheckCircle size={24} />
    ) : variant === 'warning' ? (
      <PiWarning size={24} />
    ) : variant === 'critical' ? (
      <BiErrorAlt size={24} />
    ) : null
  }
  <slot />
</blockquote>

---
import { DiGithubBadge } from "react-icons/di";
import { APP_NAME } from "../utils/constants";

const basePath = import.meta.env.BASE_URL;

---
<div class="max-w-7xl mx-auto">
  <div class="py-3 border-b border-slate-900/10 lg:px-8 lg:border-0 dark:border-slate-300/10 mx-4 lg:mx-0">
    <div class="relative flex items-center">
      <h1 class="py-0 my-0 leading-5 text-2xl font-bold">
        <a class="flex-none" href={`${basePath}/`}>{APP_NAME}</a>
      </h1>

      <div class="ml-auto flex-0">
          <a href="https://github.com/yanickrochon/i18n" target="_blank">
            <DiGithubBadge size={32} />
          </a>
      </div>
    </div>
  </div>
</div>

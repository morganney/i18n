{
  "name": "@i18n/base",
  "version": "1.0.0",
  "description": "Base translation utilities and types.",
  "author": "Yanick Rochon <yanick.rochon@gmail.com>",
  "keywords": [
    "i18n",
    "translator",
    "translate",
    "intl",
    "locale"
  ],
  "main": "./build/index.js",
  "types": "./build/index.d.js",
  "exports": {
    ".": "./build/index.js",
    "./types": "./build/types.js"
  },
  "scripts": {
    "build": "pnpm clean && tsc -p tsconfig.build.json && ts-node ../../scripts/bundle.ts",
    "clean": "rm -rf build coverage",
    "lint": "eslint . --max-warnings 0",
    "test": "jest",
    "reset": "rimraf .next .turbo node_modules"
  },
  "dependencies": {
    "iso-639-1": "^3.1.2"
  },
  "devDependencies": {
    "@i18n/eslint-config": "workspace:*",
    "@i18n/typescript-config": "workspace:*",
    "@jest/types": "29.6.3",
    "@turbo/gen": "^1.12.4",
    "@types/eslint": "^8.56.5",
    "@types/jest" : "^29.5.12",
    "@types/node": "^20.11.24",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
